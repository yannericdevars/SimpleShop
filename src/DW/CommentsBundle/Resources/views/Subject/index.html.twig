<h1>Subject list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
            <th>Isactive</th>
            <th>Date_publish</th>
            <th>Date_depublish</th>
            <th>Actions</th>
            <th>Moderation</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('subject_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.text }}</td>
            <td>{{ entity.isActive }}</td>
            <td>{% if entity.datepublish %}{{ entity.datepublish|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.datedepublish %}{{ entity.datedepublish|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('subject_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('subject_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
            <td>
                <a href="{{ path('responses_list', { 'id': entity.id }) }}">Moderate</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('subject_new') }}">
            Create a new entry
        </a>
    </li>
    <li>
        <a href="{{ path('response') }}">
            List of responses
        </a>
    </li>
</ul>
